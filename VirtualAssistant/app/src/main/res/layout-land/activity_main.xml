<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0051A0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/splash_screen_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/scs_logo_color_desc"
        android:transitionName="logo_image"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/welcomeMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/scs_logo_color_foreground"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gravitas_one"
        android:gravity="center"
        android:text="@string/welcome_message"
        android:textColor="#FBF7F7"
        android:textSize="36sp"
        android:transitionName="welcome_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_screen_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>
